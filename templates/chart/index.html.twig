{% extends 'base.html.twig' %}

{% block title %}Hello ChartController!{% endblock %}

{% block body %}

<div class="container body">

    <header>
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-xs-1">
                <h2 class="px-3">Evolution des gains</h2>
            </div>
            <div class="col link text-right pt-3">
                <ul class="list-unstyled d-inline-flex align-items-center">
                    <li><a href="{{ path('app_home') }}"><em class="fa fa-check-circle icon px-3"></em></a></li>
                </ul>
            </div>
        </div>
    </header>

    <main>
        <div class="bg-black chart">
            <div class="pt-5">
                {{ render_chart(chart) }}
            </div>
        </div>
    </main>
   
</div>

{% endblock %}
