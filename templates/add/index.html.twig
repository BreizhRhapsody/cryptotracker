{% extends 'base.html.twig' %}

{% block title %}Ajouter une transaction{% endblock %}

{% block body %}

<div class="container body">

    <header>
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-xs-1">
                <h2 class="px-3">Ajouter une crypto</h2>
            </div>
            <div class="col link text-right pt-3">
                <ul class="list-unstyled d-inline-flex align-items-center">
                    <li><a href="{{ path('app_home') }}"><em class="fa fa-check-circle px-3"></em></a></li>
                </ul>
            </div>
        </div>
    </header>

    <main class="add">
        <div class="row m-3 p-3 d-flex">
            <div class="col form-group text-center">
                {{ form_start(form) }}

                    {{ form_row(form.name) }}
                    </br>
                    {{ form_row(form.qte) }}
                    </br>
                    {{ form_row(form.value) }}
                        </br>
                    {{ form_row(form.editer, {'label': 'Ajouter'}) }}

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
            </div>
        </div>
    </main>

</div>

{% endblock %}
